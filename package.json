		"gulp-inline": "^0.1.3",
		"gulp-newer": "^1.4.0",
		"gulp-postcss": "^9.0.1",
		"gulp-replace": "^1.1.3",
		"gulp-sourcemaps": "^3.0.0",
		"htmlhint": "^1.1.4",
		"http-server": "^14.1.1",
		"husky": "^8.0.2",
		"lint-staged": "^13.0.3",
		"postcss-assets": "^6.0.0",
		"precss": "^4.0.0",
		"stylelint": "^14.15.0",
		"stylelint-config-standard-scss": "^6.1.0"
	},
	"lint-staged": {
		"*.js": "eslint --fix",
		"*.htm": "htmlhint",
		"*.scss": "stylelint --fix"
	}
