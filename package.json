	"license": "CC-BY-NC-ND-4.0",
	"main": "",
	"scripts": {
		"lint": "concurrently \"eslint --fix \"src/**/*.js\" --ignore-pattern \"docs\"\" \"htmlhint src/**/*.html\" \"stylelint --fix \"src/**/*.scss\" --ip \"z_atoms.scss\"\"",
